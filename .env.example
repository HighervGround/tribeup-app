# Supabase Configuration (Required)
# Replace these with your actual Supabase project credentials
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Weather API Configuration (Optional)
# Get your API key from https://openweathermap.org/api
VITE_OPENWEATHER_API_KEY=your_openweather_api_key_here
VITE_WEATHER_TEMP_UNIT=fahrenheit
VITE_WEATHER_UPDATE_INTERVAL=3600
VITE_WEATHER_INCLUDE_HOURLY=true
VITE_WEATHER_RAIN_THRESHOLD=0.1
VITE_WEATHER_WIND_THRESHOLD=15

# Push Notifications (Optional)
# Generate VAPID keys for push notifications
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# Timeout Configuration (Optional)
VITE_PROFILE_CHECK_TIMEOUT=5000
VITE_PROFILE_FORCE_TIMEOUT=15000
VITE_PRESENCE_HEARTBEAT_INTERVAL=30000
VITE_LOCATION_MONITORING_INTERVAL=1800000

# Business Rules (Optional)
VITE_GAME_EDIT_RESTRICTION_HOURS=2
VITE_GAME_DELETION_RESTRICTION_HOURS=4

# Development Configuration (Optional)
VITE_ENABLE_MOCK_DATA=false
VITE_LOG_LEVEL=info

# Social Login Configuration
# Get these from your OAuth provider dashboards
SUPABASE_AUTH_EXTERNAL_GOOGLE_CLIENT_ID=your_google_client_id_here
SUPABASE_AUTH_EXTERNAL_GOOGLE_SECRET=your_google_client_secret_here
SUPABASE_AUTH_EXTERNAL_APPLE_CLIENT_ID=your_apple_client_id_here
SUPABASE_AUTH_EXTERNAL_APPLE_SECRET=your_apple_client_secret_here
